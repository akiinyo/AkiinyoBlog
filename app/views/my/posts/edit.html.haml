.my_page
  = render partial: 'my/header'
  = render partial: 'my/nav'

  .span6
    %h2 記事編集
    = form_for [@post.user, @post], url: {action: :update} do |f|
      = f.label 'タイトル'
      = f.text_field :title

      = f.label '本文'
      = f.text_area :body

      .checkbox
        = f.check_box :comment
        = f.label :comment, 'コメントを受け付ける'

      = f.submit '投稿する', class:"btn btn-small btn-primary"
