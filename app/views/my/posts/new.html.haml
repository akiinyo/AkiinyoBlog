.my_page
  = render partial: 'my/header'
  = render partial: 'my/nav'

  .span6
    %h2 新規投稿
    = form_for [current_user, current_user.posts.build] do |f|
      = f.label 'タイトル'
      = f.text_field :title

      = f.label '本文'
      = f.text_area :body

      - if current_user.profile.nil? || current_user.profile.comment
        .checkbox
          = f.check_box :comment
          = f.label :comment, 'コメントを受け付ける'

      = f.submit '投稿する', class:"btn btn-small btn-primary"
