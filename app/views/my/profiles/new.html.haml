.my_page
  .span8.offset2
    .icon= image_tag(current_user.twitter_icon_url, size: "48x48")
    %h1= "#{current_user.name}さんのマイページ"

    = link_to 'ブログをかく', new_my_post_path, class: 'btn btn-large btn-primary'

  .my_nav.span2.offset2
    %ul
      %li= link_to '記事一覧', my_path
      %li= link_to 'ブログを見る', user_posts_path(current_user)
      %li= link_to 'ブログ設定', new_my_profile_path
      %li= link_to 'ボタン設置', my_buttons_path

  .span6.my_profile
    = form_for current_user.profile || current_user.build_profile, url: my_profile_path do |f|
      = f.label 'ブログ名'
      = f.text_field :blog_title

      = f.label '紹介文'
      = f.text_area :message

      = f.submit "登録する", class: "btn btn-small btn-primary"
